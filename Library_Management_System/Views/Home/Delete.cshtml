        <h4 class="text-center text-secondary">Book Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.BookName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.BookName)
            </dd>
            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Author)
            </dd>
            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Edition)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Edition)
            </dd>
            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Publisher)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Publisher)
            </dd>
            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center mt-4">
